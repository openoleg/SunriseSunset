<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderCardTitleTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorCardTitleText</item>
    </style>

    <style name="HeaderCardSubTitleTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorCardTitleText</item>
    </style>

    <style name="HeaderCardCaptionTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorCardCaptionText</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextButtonTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
